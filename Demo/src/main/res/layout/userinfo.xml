<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="{@IsRoot:true}"
    >
    <!--xmlns:mvvm="http://schemas.android.com/apk/res-auto"-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:tag="{Text:'CurrentUserInfo.FirstName'}"
        />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:tag="{Text:'CurrentUserInfo.LastName'}"
        />
    
    <Spinner
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="{Items:'Genders', SelectedChoiceIndex:'GenderIndex', ItemTemplate:'@layout/gender'}"
        />
    
    <DatePicker
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:tag="{SelectedDate:'CurrentUserInfo.DateOfBirth'}"
 	       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:tag="{OnClick:['Save']}"
        />
    
</LinearLayout>
