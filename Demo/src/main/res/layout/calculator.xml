<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5" android:columnCount="5"
            android:tag="{@IsRoot:true, @model:'ni3po42.android.tractiondemo.models.ICalculatorModel'}"
        >

    <TextView
            android:layout_height="100dip" android:layout_width="match_parent"
            android:layout_rowSpan="1"
            android:layout_columnSpan="5"
            android:layout_row="0" android:layout_column="0"
            android:gravity="right"
            android:tag="{Text:'Display'}"
            />


    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="1"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:1}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="2"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:2}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="1"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="3"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:3}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="2"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="4"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:4}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="5"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:5}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="1"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="6"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:6}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="2"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="7"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:7}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="8"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:8}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="1"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="9"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:9}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="2"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="."
            android:tag="{OnClick:['SwitchToDecimal']}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="4" android:layout_column="0"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="0"
            android:tag="{OnClick:['NumberUpdate'], CommandValue:0}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="4" android:layout_column="1"
            />


    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="+"
            android:tag="{OnClick:['Operation'], CommandValue:'+'}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="3"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="X"
            android:tag="{OnClick:['Operation'], CommandValue:'X'}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="1" android:layout_column="4"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="-"
            android:tag="{OnClick:['Operation'], CommandValue:'-'}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="3"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="/"
            android:tag="{OnClick:['Operation'], CommandValue:'/'}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2" android:layout_column="4"
            />

    <Button
            android:layout_rowSpan="1" android:layout_columnSpan="1"
            android:text="clr"
            android:tag="{OnClick:['ClearDisplay']}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="4" android:layout_column="3"
            />

    <Button
        android:layout_rowSpan="1" android:layout_columnSpan="1"
        android:text="+/-"
        android:tag="{OnClick:['Operation'], CommandValue:'+/-'}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_row="4" android:layout_column="2"
        />

    <Button
            android:layout_rowSpan="2" android:layout_columnSpan="1"
            android:text="="
            android:tag="{OnClick:['Operation'], CommandValue:'='}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="3" android:layout_column="4"
            />


</GridLayout>